          <h3 class="panel-title">Post</h3>
        </div>
      <div class="panel-body">
        <%= form_for Post.new do |post| %>
        <%= post.text_area :body , size: "75x3" %> 
      </div>
      <div class="panel-footer">
        <p>
        <%= post.submit%>
