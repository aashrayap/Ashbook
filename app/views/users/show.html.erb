      <div class="panel-body">
        
        <div class="row">
          <div class="col-xs-2">
            <img src="assets/dkim.jpg" style="width: 100%;">
          </div>
          <div class="col-xs-3">
            <p><%=@user.username%></p>
            <p><%=@user.created_at.year%>-<%=@user.created_at.month%>-<%=@user.created_at.day%></p>
            <br>
